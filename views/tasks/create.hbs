<nav class="breadcrumb">
  <a class="breadcrumb-item" href="/">Home</a>
  <a class="breadcrumb-item" href="/">Licenciamento</a>
  <span class="breadcrumb-item active">Adicionar Licenciamento</span>
</nav>

<div class="card card-body p-3">
  <form action="/store" method="post">
    {{# if success}}
    {{else}}
    {{# if errors}}
    <div class="alert alert-danger">
      {{# each errors}}
      <p>{{ this.msg }}</p>
      {{/each}}
    </div>
    {{/if}}
    {{/if}}


  <form method="post" enctype="multipart/form-data" >
    
    <div class="form-group">
      <label for="empresa">Empresa</label>
      <input type="text" class="form-control" id="empresa" name="empresa" >
    </div>
    
    <div class="form-group">
      <label for="endereco">Endereço</label>
      <input type="text" class="form-control" name="endereco" id="endereco">
    </div>

     <div class="form-group">
      <label for="notification">Data da Notificação</label>
      <input type="text" class="form-control" name="notification" id="notification">
    </div>

     <div class="form-group">
      <label for="prazoentrega">Prazo de Entrega</label>
      <input class="form-control" name="prazoentrega" id="prazoentrega"  >
    </div>

      <div class="form-group">
        <label for="entregadocumentos">Data de entrega dos documentos</label>
        <input type="text" name="entregadocumentos" id="entregadocumentos"  class="form-control">
      </div>

    <div class="form-group">
      <label for="vencimentolicenca">Data de Vencimento da Licença</label>
      <input type="text" name="vencimentolicenca" id="vencimentolicenca" class="form-control">
    </div>

    <div class="form-group">
     <label for="observation">Observações</label>
      <textarea name="observation" id="observation" rows="5" class="form-control"></textarea>
    </div>

    <div class="form-check">
      <div class="row">
        <div class="col-12 mb-2">
          <label class="form-check-label text-warning">
          <input type="radio" name="status" value="Não se Manifestou" class="form-check-input"> Não se Manifestou
        </label>
        </div>
        
        <div class="col-12">
          <label class="form-check-label text-success">
          <input type="radio" name="status" value="OK" class="form-check-input text-success"> OK
        </label>
        </div>
      </div>

      <div class="row">
        <div class="col-12 mb-2">
          <label class="form-check-label text-danger">
          <input type="radio" name="status" value="Vencido" class="form-check-input"> Vencido
        </label>
        </div>
        
        <div class="col-12">
          <label class="form-check-label text-secondary">
          <input type="radio" name="status" value="Em Andamento" class="form-check-input"> Em Andamento
        </label>
        </div>
      </div>
    </div>

    <div> 
      <button type="submit" class="btn btn-success mt-3">Adicionar</button>
      <button type="reset" class="btn btn-danger mt-3">Limpar</button>
    </div>

  </form>
</div>

